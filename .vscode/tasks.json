{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build frugally-deep",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Iinclude",
                "-lpthread",
                "-g",
                "-std=c++14",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Wshadow",
                "-Werror",
                //"-Weffc++",
                "-Wconversion",
                "-Wsign-conversion",
                //"-Wctor-dtor-privacy",
                "-Wreorder",
                "-Wold-style-cast",
                "src/main.cpp",
                "-o release/frugally_deep_main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}